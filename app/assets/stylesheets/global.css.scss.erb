body {
  margin: 0px;
  font-family: 'HelveticaNeue-Light', 'Helvetica Neue Light', 'Helvetica Neue', Arial, Helvetica, sans-serif;
  font-size: 40px;
  font-weight: 300;
  line-height: 60px;
  -webkit-font-smoothing: subpixel-antialiased;
}

#sidebar {
  width: 325px;
  margin-left: 35px;
  padding-top: 20px;
  margin-bottom: 30px;
}

#about {
  float: left;
  margin-top: 45px;
  font-family: "Avenir Next";
  font-size: 30px;
  font-weight: 600;
  width: 100%;
  color: #292929;
}

#about_para {
  float: left;
  width: 80%;
  margin-top: 20px;
  font-family: "Avenir Next";
  font-size: 18px;
  font-weight: 300;
  color: #6d6d6d;
  line-height: 28px;
  margin-bottom: 40px;
}

.post_title {
  margin: auto;
  font-family: "Avenir Next";
  font-weight: bold;
  font-size: 52px;
  color: #fff;
  text-shadow: 0px 0px 10px rgba(0,0,0,0.4);
  outline: 0; 
}

.date {
  font-weight: 100;
  font-size: 26px;
  text-shadow: 0px 0px 5px rgba(0,0,0,0.7);
  }

.sidebar_button {
  float: left;
  font-family: "Avenir Next";
  font-size: 18px;
  font-weight: 600;
  color: #727272;
  border-radius: 20px;
  border: 4px solid #f4f4f4;
  line-height: 22px;
  padding-left: 15px;
  padding-right: 15px;
  margin-top: 15px;
  padding-top: 5px;
  padding-bottom: 5px;
  text-decoration: none;
  transition: border .25s ease-in-out;
  -moz-transition: border .25s ease-in-out;
  -webkit-transition: border .25s ease-in-out;
}

.sidebar_button:hover {
  border: 4px solid #a8d2ff;
}

.link {
  color: #67b8ff;
  text-decoration: underline;
  transition: color .25s ease-in-out;
  -moz-transition: color .25s ease-in-out;
  -webkit-transition: color .25s ease-in-out;
}
.link:hover {
  color: #3c85c5;
}

.button_container {
  float: left;
  width: 100%;
}

textarea:focus, input:focus {
  outline: 0;
}

.alert {
  padding-bottom: 6px;
  font-size: 14px;
}

#rss_icon {
  float: left;
  width: 38px;
  height: 38px;
  background-image: url('<%= image_path('rss.png') %>');
  margin-right: 120px;
  transition: .25s ease-in-out;
}

#rss_icon:hover{
  background-position: -38px 0;
}

#face_circle {
  float: left;
}

.blurred {
  -webkit-filter: blur(6px);
  -webkit-transform: translate3d(0, 0, 0);
}

svg{
  height: 0;
}