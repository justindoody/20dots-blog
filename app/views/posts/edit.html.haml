- provide(:title, "| #{@post.title}")

%style 
  -# Dynamically generating the css for the hover effect
  - if !@post.cover_photo.nil?
    ="#header_container\{background-image: url('/assets/post_covers/" << @post.cover_photo << ".jpg');}"
    ="#header_container_blurred\{background-image: url('/assets/post_covers/" << @post.cover_photo << "_blur.jpg');}"

#header_wrapper
  #header_container
  #header_container_blurred
  #header_container_text
    .post_title
      #post_height
        .date
          = @post.created_at.strftime("%B %d, %Y")
        #post_title{:contenteditable => "true"}
          = @post.title

= render 'layouts/sidebar'

#content
  #post_actions
    - if @post.draft
      = link_to "Publish", publish_post_path(@post), class: "pure-button button-success"
    - else
      = link_to "Unpublish", unpublish_post_path(@post), class: "pure-button button-warning"

  #post{:contenteditable => "true"}
    = @post.post

  = render 'layouts/disqus'
