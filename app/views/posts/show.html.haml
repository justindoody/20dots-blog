- provide(:title, "| #{@post.title}")

#header_wrapper
  - if !@post.cover_photo.url.nil?
    %img.bg#crisp{:src => "#{@post.cover_photo.url}", :alt => "cover image "}
    %img.bg#blurry{:src => "#{@post.cover_photo.url}", :style => "filter: url('#blur_svg')", :alt => "cover image blurred"}
  #header_container_text
    #post_height.post_title
      .date
        = @post.published_at.strftime("%B %d, %Y")
      %h1#post_title
        = @post.title

= render 'layouts/sidebar'

#content
  -# Display updated text if updated since published exluding edits on the day of publishing
  - if @post.updated_at.strftime("%m%d%y").to_i != @post.published_at.strftime("%m%d%y").to_i
    #updated_post 
      Post Updated On 
      = @post.updated_at.strftime("%B %d, %Y")
  = @post.post.html_safe

  = render 'subscribe'
  = render 'layouts/disqus'

  %svg
    %filter#blur_svg{"color-interpolation-filters" => "sRGB"}
      <feGaussianBlur stdDeviation="8"/>
      %feComponentTransfer
        <feFuncA type="discrete" tableValues="1 1"/>
