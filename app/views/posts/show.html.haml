- provide(:title, "| #{@post.title}")

#header_wrapper
  - if !@post.cover_photo.url.nil?
    %img.bg#crisp{:src => "#{@post.cover_photo.url}", :alt => "cover image "}
    %img.bg#blurry{:src => "#{@post.cover_photo.url}", :style => "filter: url('#blur_svg')", :alt => "cover image blurred"}
  #header_container_text
    #post_height.post_title
      .date
        = @post.created_at.strftime("%B %d, %Y")
      #post_title
        = @post.title

= render 'layouts/sidebar'

#content
  = @post.post.html_safe

  = render 'subscribe'
  = render 'layouts/disqus'

  %svg
    %filter#blur_svg{"color-interpolation-filters" => "sRGB"}
      <feGaussianBlur stdDeviation="8"/>
      %feComponentTransfer
        <feFuncA type="discrete" tableValues="1 1"/>
