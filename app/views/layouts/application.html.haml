!!! 5
%html
  %head
    = render 'layouts/head'
    = auto_discovery_link_tag :atom, '/feed'
    = auto_discovery_link_tag :rss, '/feed.rss'
    = yield :head

  %body{ class: body_class, data: { controller: controller_name.camelize, action: action_name.camelize } }
    = render 'layouts/sidebar' unless post_page?
    = yield
    = render 'layouts/modal'
    = render 'layouts/google_analytics'