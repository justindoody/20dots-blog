- provide(:title, "Log In")

#login
  #login_container
    - flash.each do |message_type, message|
      %div{:class => "alert alert-#{message_type}"}
        = message
    = form_for(:session, url: sessions_path, html: {class: "pure-form"}) do |f|

      = f.password_field :password, placeholder: "Password"

      = f.submit "Log In", class: "pure-button pure-button-primary"

#all_posts
  %ul.flip
    - @posts.each do |post|
      = render "posts/dynamic_css", :post => post
      %li
        - p = "p" + post.id.to_s
        = link_to post, class: "post_container cover_photo", id: p do
          .post_title
            .date
              = post.created_at.strftime("%B %d, %Y")
            = post.title