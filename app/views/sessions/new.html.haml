- provide(:title, "Log In")

#login
  #login_container
    - flash.each do |message_type, message|
      %div{:class => "alert alert-#{message_type}"}
        = message
    = form_for(:session, url: sessions_path, html: {class: "pure-form"}) do |f|

      = f.password_field :password, placeholder: "Password"

      = f.submit "Log In", class: "pure-button pure-button-primary"

#all_posts
  %ul.flip
    - @posts.each do |post|
      %style
        -# Dynamically generating the css for the hover effect
        - if !post.cover_photo.nil?
          ="#" << post.cover_photo << "\{background-image: url('assets/post_covers/" << post.cover_photo << ".jpg');}"
          ="#" << post.cover_photo << ":hover\{background-image: url('assets/post_covers/" << post.cover_photo << "_blur.jpg');}"
      %li
        = link_to post, class: "post_container cover_photo", id: post.cover_photo do
          .post_title
            .date
              = post.created_at.strftime("%B %d, %Y")
            = post.title