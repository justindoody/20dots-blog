- provide(:title, "Log In")

#login
  #login_container
    - flash.each do |message_type, message|
      %div{:class => "alert alert-#{message_type}"}
        = message
    = form_for(:session, url: sessions_path, html: {class: "pure-form"}) do |f|

      = f.password_field :password, placeholder: "Password"

      = f.submit "Log In", class: "pure-button pure-button-primary"

#all_posts
  %ul.flip
    - @posts.each do |post|
      %li
        = link_to post, class: "post_container cover_photo" do
          %img.bg.blurry{:src => "#{post.cover_photo.url}", :style => "filter: url('#blur_svg')" }
          %img.bg.crisp{:src => "#{post.cover_photo.url}"}

          .post_title
            .date
              = post.created_at.strftime("%B %d, %Y")
            = post.title.strip

%svg
  %filter#blur_svg{"color-interpolation-filters" => "sRGB"}
    <feGaussianBlur stdDeviation="8"/>
    %feComponentTransfer
      <feFuncA type="discrete" tableValues="1 1"/>