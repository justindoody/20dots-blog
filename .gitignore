# Ignore bundler config.
/.bundle

# Ignore the default SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
/log/*.log
/tmp

# Ignore Spring files.
/spring/*.pid

# Hide the production database details
/config/database.yml

# Hide the sublime project file
20dots.sublime-project
20dots.sublime-workspace

# Remove the cover image upload directory
/public/uploads/

# Remove the deploy script, not totally necessary but whatevs
/config/deploy.rb